{
  "extends": [
    "config:base"
  ],
  "schedule": ["after 6am before 10am every weekday"],
  "regexManagers": [
    {
      "fileMatch": ["applications/.+helmrelease\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: \"*(?<currentValue>.*)\"*\n"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
